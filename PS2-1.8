double x = double.Parse(Console.ReadLine());
Console.WriteLine(Sinh(x, 0.00001));
Console.WriteLine(Math.Sinh(x));

static double Sinh(double x, double eps)
{
    double res = x, cnt = 0;
    double sinh = Math.Sinh(x);
    double k = 1;
    double f = 1;
    double powx = x;
    while (Math.Abs(sinh - res) > eps)
    {
        k += 2;
        f = f * (k - 1) * k;
        cnt++;
        powx = powx * x * x;
        res += powx / f;

    }
    Console.WriteLine(cnt);
    return res;
}
